<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sandbox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Sandbox.NoActionBar" parent="Theme.Sandbox">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Sandbox.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Sandbox.ActionBar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Sandbox.ActionBar.Title.Brand" parent="TextAppearance.Sandbox.ActionBar.Title">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextAppearance.Sandbox.ActionBar.Subtitle.Brand" parent="TextAppearance.Sandbox.ActionBar.Subtitle">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextAppearance.Sandbox.Headline" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="TextAppearance.Sandbox.Headline.Secondary" parent="TextAppearance.Sandbox.Headline">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextAppearance.Sandbox.Body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Sandbox.Body1.Secondary" parent="TextAppearance.Sandbox.Body1">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextAppearance.Sandbox.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="TextAppearance.Sandbox.Body2.Secondary" parent="TextAppearance.Sandbox.Body2">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
</resources>